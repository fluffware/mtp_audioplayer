<?xml version="1.0" encoding="UTF-8"?>
<audioplayer xmlns="http://www.elektro-kapsel.se/audioplayer/v1">
  <bind>/tmp/siemens/automation/HmiRunTime</bind>
  <playback_device rate="44100" channels="2">default</playback_device>
  <clips path="DTMF"> 
    <file id="SoundAlarm">0.wav</file>
    <file id="SoundInfo">1.wav</file>
    <file id="SoundAccept">2.wav</file>
    <file id="SoundExe">3.wav</file>
    <file id="SoundInc">4.wav</file>
    <file id="SoundDec">5.wav</file>
    <sine id="A" amplitude="0.5" frequency="440" duration="0.1s"/>
    <sine id="A#" amplitude="0.5" frequency="466.16" duration="0.1s"/>
    <sine id="B" amplitude="0.5" frequency="493.88" duration="0.1s"/>
    <sine id="C" amplitude="0.5" frequency="523.25" duration="0.1s"/>
    <sine id="C#" amplitude="0.5" frequency="554.37" duration="0.1s"/>
    <sine id="D" amplitude="0.5" frequency="587.33" duration="0.1s"/>
    <sine id="D#" amplitude="0.5" frequency="622.25" duration="0.1s"/>
    <sine id="E" amplitude="0.5" frequency="659.26" duration="0.1s"/>
    <sine id="F" amplitude="0.5" frequency="698.46" duration="0.1s"/>
    <sine id="F#" amplitude="0.5" frequency="739.99" duration="0.1s"/>
    <sine id="G" amplitude="0.5" frequency="783.99" duration="0.1s"/>
    <sine id="G#" amplitude="0.5" frequency="830.61" duration="0.1s"/>

  </clips>
  <actions>
    <play id="Dec">SoundDec</play>
    <play id="Inc">SoundInc</play>
    <play id="Alarm">SoundAlarm</play>
    <play id="Info">SoundInfo</play>
    <sequence id="Seq">
      <play id="Dec">SoundDec</play>
      <wait>0.3s</wait>
      <play id="Inc">SoundInc</play>
    </sequence>
    <sequence id="Blipp">
      <repeat>
	<play>A</play>
	<wait>0.1s</wait>
	<play>B</play>
	<wait>1s</wait>
      </repeat>
    </sequence>
      <sequence id="Blipp3">
      <repeat count ="3">
	<play>A</play>
	<wait>0.1s</wait>
	<play>B</play>
	<wait>1s</wait>
      </repeat>
    </sequence>
    <sequence id="RefBlipp">
      <action use="Blipp3"/>
    </sequence>
    <parallel id="ParWait">
      <play timeout="2.1s">SoundAlarm</play>
      <play timeout="2.1s">SoundInc</play>
    </parallel>
    <parallel id="ParNoWait">
      <play timeout="0s">B</play>
      <play timeout="0s">A</play>
    </parallel>
    <parallel id="ParPriority">
      <sequence>
	<wait>1s</wait>
	<play priority="1">SoundInfo</play>
      </sequence>
      <sequence>
	<play priority="2">SoundAlarm</play>
	<wait>1s</wait>
	<play priority="2">SoundAlarm</play>
      </sequence>
    </parallel>
    <sequence id="AlarmRepeat">
      <repeat>
	<repeat count="20">
	  <play>SoundAlarm</play>
	  <wait>5s</wait>
	</repeat>
	<wait>6h</wait>
      </repeat>
    </sequence>
    <sequence id="AlarmDelayed">
      <repeat>
	<wait>5m</wait>
	<repeat count="20">
	  <play>SoundAlarm</play>
	  <wait>5s</wait>
	</repeat>
      </repeat>
    </sequence>

    <sequence id="AlarmOnce">
      <play>SoundAlarm</play>
    </sequence>
    <sequence id="InfoOnce">
      <play>SoundInfo</play>
    </sequence>
  </actions>
  <tags>
    <toggle tag="SoundAlarm">
      <play>SoundAlarm</play>
    </toggle>
    <toggle tag="SoundInc">
      <play>SoundInfo</play>
    </toggle>
    <toggle tag="SoundExe">
      <play>SoundExe</play>
    </toggle>
    <toggle tag="SoundDec">
      <play>SoundDec</play>
    </toggle>
    <equals tag="AlarmProfile" value="0">
      <repeat>
	<play>A</play>
	<wait>0.5s</wait>
      </repeat>
    </equals>
    <equals tag="AlarmProfile" value="1">
      <repeat>
	<play>B</play>
	<wait>0.5s</wait>
      </repeat>
    </equals>
    <!--<toggle tag="AlarmRestart">
      <alarm_restart/>
    </toggle>
    <equals tag="AlarmProfile" value="0">
      <set_profile>Normal</set_profile>
    </equals>
    <equals tag="AlarmProfile" value="1">
      <set_profile>Operation</set_profile>
    </equals>-->
  </tags>
  <alarms>
    <filter id="AlarmsUnacked">
      <class>Larm</class>
      <unacked/>
    </filter>
    <filter id="AlarmsRaised">
      <class>Larm</class>
      <raised/>
    </filter>
    <filter id="Warnings">
      <class>Varning</class>
      <raised/>
    </filter>
    <profile id="Normal">
      <while filter="AlarmUnacked" state="not_empty">
	<action use="AlarmRepeat"/>
      </while>
      <while filter="AlarmsRaised" state="not_empty">
	<action use="AlarmDelayed"/>
      </while>
	
      <when filter="Varning" event="add">
	<action use="InfoOnce"/>
      </when>
    </profile>
  </alarms>
</audioplayer>
